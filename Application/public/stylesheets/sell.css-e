body {
    background-color: #fc6c64;
}
#content {
    position: relative;
    width: 100%;
    height: 100%;
    margin-top: 15%;
}
#results {
    background: #FFFFFF;
    height: 50%; 
    width: 85%;
    left: 15%;
    margin: auto;
    margin-bottom: 5%;
    border-radius: 75px;
}
.info{
    width: 67%;
    height: 100%;
    float: right;
}
.bookdetails{
    height: inherit;
    width: auto;
    margin-top: 6%;
}
.info input{
    height: 8%;
    width: 93%;
    margin-bottom: 3%
}
#postbutton{
    float:right;
    margin-right: 15%;
    margin-top: 1%;
    width: 30%; 
    color: black;
    line-height: 30px;
    height: 100%;
    font-size: 1000%;
}
.picture{
    width: 33%;
    height: 100%;
    float: left;
}
.picture p{
    height: 70%;
    margin-top: 40px;
    margin-left: 5%;
    margin-right: 5%;
}
